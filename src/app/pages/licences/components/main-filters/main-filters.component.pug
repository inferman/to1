.filters-block_wrapper
  .filters-block_navigation
    .filters_main-navigation
      ul.filters_navigation-list
        li.filters_navigation-item(
          (click)="setActiveMainTab(filter)",
          *ngFor="let filter of tabsList; let i = index",
          [class.active]="mainActiveTab ? (filter.title === mainActiveTab) : (i === 0)"
        )
          .btn.navigation-btn
            | {{ filter.title }}
  .filters-block_main
    .filters_categories-navigation
      ul.filters_categories-list
        li.filters_category-item(
          (click)="setSecondMainTab(innerFilter)",
          *ngFor="let innerFilter of categoriesList; let i = index",
          [class.active]="secondActiveTab ? (innerFilter.title === secondActiveTab) : (i === 0)"
        )
          .btn.category-btn {{ innerFilter.title }}
      .filters_arrows-box
        .btn.arrow-btn.arrow-btn--prev
          svg.icon.svg-ic-table-arrow
            use(xlink:href="../../../../../assets/img/symbol-defs.svg#svg-ic-table-arrow")
        .btn.arrow-btn.arrow-btn--next
          svg.icon.svg-ic-table-arrow
            use(xlink:href="../../../../../assets/img/symbol-defs.svg#svg-ic-table-arrow")



    .filters_content-box
      section.filters_static-filters.row.align-bottom.align-justify
        .columns.xlarge-8.small-12
          ul.row.align-bottom
            li.columns.shrink
              button(type="button").btn.btn_alert.btn--rounded
                .inner-holder
                  svg.btn-icon.icon.svg-fire-icon
                    use(xlink:href="../../../../../assets/img/symbol-defs.svg#svg-fire-icon")
                  span Whats new
            li.columns
              .filter-wrapper
                label select month
                .dp-wrapper
                  i(aria-hidden="true").fa.fa-calendar
                  input(type="text",
                    name="selectedDate",
                    [(ngModel)]="selectedMonth",
                    mode="month",
                    [dpDayPicker]="config",
                    theme="to1-datepicker",
                    (ngModelChange)="onDateChange($event)"
                    )
                //-dp-month-calendar( [(ngModel)]="selectedDate", [config]="config")
            li.columns
              .filter-wrapper
                label select currency
                .select
                  simple-select(
                    [selectList]="currenciesList",
                    [selectedItem]="currenciesList[0]",
                    (itemSelected)="onCurrencySelected($event)"
                  )
            li.columns
              .filter-wrapper
                label language
                .select
                  simple-select(
                    [selectList]="languagesList",
                    [selectedItem]="languagesList[0]",
                    (itemSelected)="onLanguageSelected($event)"
                  )

            li.columns.xlarge-3.small-shrink
              .filter-wrapper
                label select pricelist
              .switcher-wrapper
                .can-toggle.filters-toggle
                  input(id="e" type="checkbox")
                  label(for="e")
                    .can-toggle__switch(
                      data-checked="Partner",
                      data-unchecked="Global")
        .columns.xlarge-4.small-12
          .static-btns-list.row.collapse.align-bottom.align-right
            .column.shrink
              .static-btns-holder
                .btn-holder
                  button(type="button").btn.btn--color-filled.btn--black
                    .inner-holder
                      i(aria-hidden="true").btn-icon.fa.fa-refresh
                      span Reset filters
                .btn-holder.additional-info-holder
                  button(type="button").btn.btn--color-filled.btn--blue
                    .inner-holder
                      i(aria-hidden="true").btn-icon.fa.fa-share-square
                      span Import products
                  .additional-box.additional-box--top
                    dl
                      dt Total products:
                      dd 4,243
                  .additional-box.additional-box--bottom
                    dl
                      dt Last successful update:
                      dd 08/27/2018




      section.filters_dinamic-filters
        .dinamic-filters_spoiler(
          (click)="toggleDynamicFilters()" )
          .text-box
            span filters
            i.fa(aria-hidden="true",
              [ngClass]="isDynamicFiltersActive ? 'fa-angle-down' : 'fa-angle-up'" )
        ul.row.dinamic-filters_list(*ngIf="isDynamicFiltersActive")
          li.columns(
            *ngFor="let filter of dinamicFiltersList"
          )
            .filter-wrapper
              label {{ filter.label }}
              input(type="text",
                name="{{ filter.name }}"
              )

