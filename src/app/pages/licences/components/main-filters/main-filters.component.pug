.filters-block_wrapper
  .filters-block_navigation
    .filters_main-navigation
      ul.filters_navigation-list
        li.filters_navigation-item(
          (click)="setActiveMainTab(filter)",
          *ngFor="let filter of tabsList; let i = index",
          [class.active]="mainActiveTab ? (filter.title === mainActiveTab) : (i === 0)"
        )
          .btn.navigation-btn
            | {{ filter.title }}
  .filters-block_main
    .filters_categories-navigation
      ul.filters_categories-list
        li.filters_category-item(
          (click)="setSecondMainTab(innerFilter)",
          *ngFor="let innerFilter of categoriesList; let i = index",
          [class.active]="secondActiveTab ? (innerFilter.title === secondActiveTab) : (i === 0)"
        )
          .btn.category-btn {{ innerFilter.title }}
      .filters_arrows-box
        .btn.arrow-btn.arrow-btn--prev
          svg.icon.svg-ic-table-arrow
            use(xlink:href="../../../../../assets/img/symbol-defs.svg#svg-ic-table-arrow")
        .btn.arrow-btn.arrow-btn--next
          svg.icon.svg-ic-table-arrow
            use(xlink:href="../../../../../assets/img/symbol-defs.svg#svg-ic-table-arrow")



    .filters_content-box
      section.filters_static-filters.row.align-middle
        .columns.small-6
          ul.row.align-bottom
            li.columns.small-3
              button(type="button").btn.btn--bordered.btn_alert.btn_iconed
                .btn_icon-holder
                  i(aria-hidden="true").fa.fa-fire
                .btn_text-holder Whats new
            li.columns.small-3
              .filter-wrapper
                label select currency
                input(type="text",
                  name="currency"
                  )
            li.columns.small-3
              .filter-wrapper
                label language
                input(type="text",
                  name="language"
                  )
            li.columns.small-3
              .filter-wrapper
                label select month
                input(type="text",
                  name="month"
                  )
        .columns.small-2
          //-.filter_buttons-group.text-center
            button(type="button").btn.btn--bordered.btn_alert.btn_iconed
              .btn_icon-holder
                i(aria-hidden="true").fa.fa-fire
              .btn_text-holder Whats new

          .can-toggle.demo-rebrand-2
            input(id="e" type="checkbox")
            label(for="e")
              .can-toggle__switch(
                data-checked="Global",
                data-unchecked="Partner"
              )



      section.filters_dinamic-filters
        ul.row
          li.columns(
            *ngFor="let filter of dinamicFiltersList"
          )
            .filter-wrapper
              label {{ filter.label }}
              input(type="text",
                name="{{ filter.name }}"
              )


      section.action-btns_wrapper.row.align-right
        .column.shrink
          .btns-group
            button.btn.btn_iconed.btn_shadowed.btn--secondary(type="button")
              .btn_icon-holder
                svg.icon.svg-office365
                  use(xlink:href="../../../../../assets/img/symbol-defs.svg#svg-office365")
              .btn_text-holder Import  product
            button.btn.btn_iconed.btn_shadowed.btn--primary(type="button")
              .btn_icon-holder
                svg.icon.svg-office365
                  use(xlink:href="../../../../../assets/img/symbol-defs.svg#svg-office365")
              .btn_text-holder Reset



